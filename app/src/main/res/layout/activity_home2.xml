<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bac1"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/background"
        app:auto_cycle="true"
        app:corner_radius="5"
        app:delay="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111"
        app:period="1000">

    </com.denzcoskun.imageslider.ImageSlider>

    <com.huawei.hms.ads.banner.BannerView
        android:id="@+id/hw_banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adId="@string/banner_ad_id"
        app:bannerSize="BANNER_SIZE_360_57"
        app:layout_constraintBottom_toTopOf="@+id/slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/scanbtn"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="164dp"
        android:layout_height="92dp"
        android:text="Scan"
        android:textColor="#D1C9C9"
        app:icon="@drawable/ic_baseline_qr_code_scanner_24"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/contactbtn"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/facultybtn"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="164dp"
        android:layout_height="92dp"
        android:text="Vision"
        android:textColor="#D1C9C9"
        app:icon="@drawable/vision"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.766" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/locatebtn"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="169dp"
        android:layout_height="92dp"
        android:text="Locate me"
        android:textColor="#D1C9C9"
        app:icon="@drawable/locateme"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/facultybtn"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.766" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/depbtn"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="187dp"
        android:layout_height="74dp"
        android:text="Departments"
        android:textColor="#D1C9C9"
        app:icon="@drawable/ic_baseline_account_tree_24"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/contactbtn"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="164dp"
        android:layout_height="92dp"
        android:text="Contact"
        android:textColor="#D1C9C9"
        app:icon="@drawable/ic_baseline_contact_phone_24"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />


